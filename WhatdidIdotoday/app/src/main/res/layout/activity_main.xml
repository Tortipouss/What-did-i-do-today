                android:layout_weight="1" />

        </LinearLayout>

        <!-- septieme ligne -->
        <LinearLayout
            android:id="@+id/lnrLyt_7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lnrLyt_6"
            android:layout_marginStart="20dp"
